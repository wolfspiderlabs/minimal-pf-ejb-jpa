<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
    version="4.0">
    <display-name>minimal-pf-ejb-jpa</display-name>

    <context-param>
        <param-name>org.jboss.weld.development</param-name>
        <param-value>true</param-value>
    </context-param>

    <context-param>
        <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
        <param-value>server</param-value>
    </context-param>

    <context-param>
	<param-name>primefaces.THEME</param-name>
	<param-value>cruze</param-value>
    </context-param>

    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>FacesServlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>FacesServlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    
    <error-page>
        <exception-type>test.jsf.CustomException</exception-type>
        <location>/WEB-INF/errorpages/error.xhtml</location>
    </error-page>
    
    <!--<error-page>
        <exception-type>javax.ejb.EJBException</exception-type>
        <location>/WEB-INF/errorpages/error.xhtml</location>
    </error-page>  -->
    
    <error-page>
        <exception-type>test.jsf.CustomException</exception-type>
        <location>/WEB-INF/errorpages/error.xhtml</location>
    </error-page>        
</web-app>